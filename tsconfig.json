{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2021", "DOM"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "skipLibCheck": true,
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "lib"
  },
  "include": ["src/**/*.ts"]
}
